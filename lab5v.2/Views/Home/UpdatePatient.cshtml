@model lab5v2.Models.Patient
@{
    ViewData["Title"] = "UpdatePatient";
}

<h2>UpdatePatient</h2>

<form method="post" class="form-horizontal">
    <div class="form-group">
        <div class="col-md-4">
            <label>Name</label>
            <input type="text" name="name" value="@Model.Name" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-4">
            <label>Doctor</label>
            <select name="doctor_id">
                @foreach (var doctor in Model.temp_doctors)
                {
                    <option value="@doctor.Id">@doctor.Name</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-4">
            <input type="submit" class="btn btn-default" name="submit" value="Update" />
        </div>
    </div>
</form>

<a href="/Home/Patients">Back to list</a>
